<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BillBuddies.About"
             Title="About">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="150">
            <!-- Main Content -->
            <StackLayout>
                <Label Text="Bill Buddies is your go-to app for managing group finances, ensuring everyone stays informed about shared costs and balances during trips, group activities and outings."
                       VerticalOptions="Start" 
                       HorizontalOptions="FillAndExpand" 
                       HorizontalTextAlignment="Center"/>
            </StackLayout>

            <!-- Spacer that expands to push the footer to the bottom -->
