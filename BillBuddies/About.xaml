            <!-- Footer -->
            <StackLayout VerticalOptions="End" HorizontalOptions="FillAndExpand">
                <Label Text="Made by Hasbe Zuliyana SWD0181167"
                       HorizontalTextAlignment="Center"/>
                <Label Text="Copyright Â© 2024 Bill Buddies, Inc."
                       HorizontalTextAlignment="Center"/>
                <Label Text="Mobile Application Development"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
